<section class="projects-slider" id="projects">
    <h2>Projects</h2>
    <div class="swiper project-carousel">
        <div class="swiper-wrapper">
            <% projects.forEach(project => { %>
                <a href="<%= project.url %>" class="swiper-slide">
                    <picture>
                        <source srcset="<%= project.imgWebp %>" type="image/webp">
                        <source srcset="<%= project.img %>">
                        <img src="<%= project.img %>" alt="<%= project.name %> image" class="project-image">
                    </picture>
                    <div class="project-data">
                        <h2><%- project.name %></h2>
                        <p><%- project.description %></p>
                    </div>
                </a>
            <% }); %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</section>
